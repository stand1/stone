/* pages/selectExh/selectExh.wxss */
.selectExh{
  width: 100%;
  box-sizing: border-box;
}
.selectExhBox{
  width: 100%;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.selectExhBoxHeader{
  width: 100%;
  background:rgba(255,255,255,1);
  font-size:28rpx;
  font-weight:bold;
  text-align: center;
  padding: 37rpx 0 36rpx;
  box-sizing: border-box;
}
.selectExhBoxHeader .headerButton{
  margin-bottom: 12rpx;
}
.selectExhHint{
  width: 100%;
  height: 66rpx;
  box-sizing: border-box;
  background:rgba(249,249,248,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.selectExhHint .item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.selectExhHint .item .itemColor{
  width:30rpx;
  height:30rpx;
  background:rgba(160,160,160,1);
  box-sizing: border-box;
  margin-right: 11rpx;
}
.selectExhHint .itemB{
  margin: 0 92rpx;
}
.selectExhHint .item .itemColorB{
  background:rgba(255,144,0,1);
}
.selectExhHint .item .itemColorC{
  background:#fff;
}
.selectExhCentre{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
}
.selectExhCentreArea{
  width: 100%;
  height: 822rpx;
  line-height: 822rpx;
  box-sizing: border-box;
}
.selectExhCentreBox{
  width: 100%;
  height: 822rpx;
  line-height: 822rpx;
  box-sizing: border-box;
}
.selectExhImg{
  height: 500rpx;
  background: url('http://yd.mycze.com/img/zwt/elsshz.png') no-repeat;
  background-size: 100% 100%;
  position: relative;
}
.selectExhImg .exhBox{
  position: absolute;
  top: 8rpx;
  right: 75rpx;
  width: 398rpx;
  height: 450rpx;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  color: #333;
  padding: 0 10px; 
}
.exhBox .exhBoxitem{
  width: 18rpx;
  height: 15rpx;
  box-sizing: border-box;
  margin-right: 2rpx;
}
.exhBox .exhBoxitemActive{
  margin-right: 0;
}
.exhBox .exhBoxitems{
  width: 18rpx;
  height: 15rpx;
  box-sizing: border-box;
}
.exhBox image{
  width: 18rpx;
  height: 15rpx;
}
.selectExhMsg{
  width: 100%;
  height: 66rpx;
  box-sizing: border-box;
  background:rgba(249,249,248,1);
  display: flex;
  align-items: center;
  padding-left: 26rpx;
}
.itemColor{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(255,144,0,1);
  margin-left: 10rpx;
}
.selectExhFooter{
  width: 100%;
  height: 87rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(238,238,238,1);
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
}
.selectExhFooter .footerBut{
  width:500rpx;
  height:64rpx;
  background:linear-gradient(0deg,rgba(255,113,0,1) 0%,rgba(255,148,62,1) 100%);
  border-radius:32rpx 32rpx 32rpx 0rpx;
  box-sizing: border-box;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
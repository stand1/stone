/* pages/invitation/invitation.wxss */
.invitationBox{
  width: 100%;
  height: 100%;
  position: fixed;
  box-sizing: border-box;
  overflow: auto;
  background:rgba(249,249,248,1);
}
.invitation{
  width: 100%;
  box-sizing: border-box;
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.header{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx 24rpx 22rpx;
}
.header .headerT{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:20rpx;
  font-weight:bold;
  margin-bottom: 17rpx;
}
.header .headerT .headerTL{
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.headerTL .headerTLimg{
  width: 40rpx;
  height: 40rpx;
  box-sizing: border-box;
  border-radius: 50%;
  margin-right: 10rpx;
}
.headerTR{
  font-weight:bold;
  color:rgba(250,126,65,1);
}
.headerC{
  width:100%;
  height:260rpx;
  /* background:linear-gradient(90deg,rgba(25,43,87,1) 0%,rgba(63,46,99,1) 100%); */
  background: url('https://yd.mycze.com/img/invitation/invitationBg.png') no-repeat;
  background-size: 100% 100%;
  border-radius:10rpx;
  box-sizing: border-box;
  padding: 32rpx 19rpx 12rpx;
  color:rgba(255,255,255,1);
  font-size:26rpx;
}
.headerC .headerCT{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom:1rpx dashed rgba(255,255,255,1);
}
.headerC .headerCT .headerCTL text{
  display: block;
}
.headerC .headerCT .headerCTL .colors{
  font-size:36rpx;
  font-weight:bold;
  color:rgba(242,164,52,1);
}
.headerC .headerCT .headerCTR{
  width:116rpx;
  height:43rpx;
  background:linear-gradient(-90deg,rgba(250,125,65,1) 0%,rgba(251,176,80,1) 100%);
  border-radius:22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:22rpx;
}
.headerCB{
  width: 100%;
  box-sizing: border-box;
  padding-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.headerCB text{
  display: block;
  text-align: center;
}
.headerCB text.colors{
  font-size:32rpx;
  font-weight:bold;
  margin-top: 10rpx;
}
.headerCBL{
  border-right: 1rpx dashed rgba(255,255,255,1);
}
.headerCBL, .headerCBR{
  width: 50%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.headerB{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}
.headerBBox{
  width: 50%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.headerBL, .headerBR{
  width:200rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  border:2rpx solid rgba(63,46,99,1);
  border-radius:30rpx;
  font-size:24rpx;
  font-weight:bold;
  color:rgba(63,46,99,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.headerBL image, .headerBR image{
  width: 29rpx;
  height: 29rpx;
  box-sizing: border-box;
  margin-right: 12rpx;
}
.list{
  width: 100%;
  box-sizing: border-box;
  margin-top: 13rpx;
  background: #fff;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  padding: 23rpx 24rpx 21rpx;
}
.listTitle{
  font-size:26rpx;
  font-weight:bold;
  margin-bottom: 21rpx;
}
.listItem{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  margin-bottom: 20rpx;
}
.listItem:last-child{
  margin-bottom: 0;
}
.listItem .listItemL, .listItem .listItemL image{
  width:216rpx;
  height:132rpx;
  border-radius:4rpx;
}
.listItem .listItemL{
  margin-right: 20rpx;
}
.listItemR{
  box-sizing: border-box;
  width: 460rpx;
}
.listItemRTitle{
  font-size:26rpx;
  font-weight:bold;
  height: 52rpx;
  line-height: 1;
  margin-bottom: 14rpx;
}
.listItemR .generalize{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}
.listItemR .generalize .generalizeColor{
  font-size:26rpx;
  font-weight:bold;
  color:rgba(242,164,52,1);
}
.listItemR .generalize .generalizes{
  width:75rpx;
  height:33rpx;
  background:linear-gradient(-90deg,rgba(250,125,65,1) 0%,rgba(251,176,80,1) 100%);
  border-radius:17rpx;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
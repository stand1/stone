/* pages/immediatePayment/immediatePayment.wxss */
.immediatePayment{
  width: 100%;
  box-sizing: border-box;
}
.immediatePaymentBox{
  width: 100%;
  height: 100%;
  position: fixed;
  box-sizing: border-box;
  padding: 20rpx 24rpx 136rpx;
  background:rgba(249,249,248,1);
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  overflow: auto;
}
.paymentMsg{
  width: 100%;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.paymenMsg .paymenMsgBox{
  width: 100%;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  padding: 25rpx 26rpx 26rpx;
  margin-bottom: 14rpx;
}
.paymenMsg .paymenMsgBox .title{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
  border-bottom:2rpx dashed rgba(102,102,102,1);
  padding-bottom: 19rpx;
}
.paymenMsg .paymenMsgBox .paymenMsgBoxs{
  padding-top: 21rpx;
  width: 100%;
  box-sizing: border-box;
}
.paymenMsg .paymenMsgBox .paymenMsgBoxs .item{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.paymenMsg .paymenMsgBox .paymenMsgBoxs .item:last-child{
  margin-bottom: 0;
}
.paymenMsg .paymenMsgBox .paymenMsgBoxs .item .itemR{
  color:rgba(51,51,51,1);
}
.paymenFooter{
  width:100%;
  height:98rpx;
  background:rgba(255,255,255,1);
  border-top:1rpx solid rgba(229,229,229,1);
  position: fixed;
  left: 0;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(24,27,34,1);
}
.paymenFooterLColor{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(255,95,0,1);
}
.paymenFooterR{
  width:200rpx;
  height:64rpx;
  background:rgba(255,95,0,1);
  border-radius:32rpx;
  font-size:30rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
}
.itemBActive{
  /* height: 327rpx; */
  opacity: 1;
}
.itemB .itemBName{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 12rpx;
}
.itemBTxts{
  margin-bottom: 10rpx;
}
.itemB .mr{
  margin-right: 40rpx;
}
.itemBStatusBox{
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(229,229,229,1);
  padding:0 42rpx 23rpx;
  display: flex;
  /* justify-content: space-between; */
  position: relative;
  margin-bottom: 21rpx;

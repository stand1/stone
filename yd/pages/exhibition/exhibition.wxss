/* pages/exhibition/exhibition.wxss */
.exhibitionBox{
  width: 100%;
  height: 100%;
  position: fixed;
  overflow: auto;
  box-sizing: border-box;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(40,40,40,1);
  background:rgba(249,249,248,1);
}
.exhibitionNodata{
  width: 100%;
  box-sizing: border-box;
  background:rgba(249,249,248,1);
  display: flex;
  justify-content: center;
  padding-top: 100rpx;
  color: #333;
}
.exhibitionNodataMian{
  width:702rpx;
  height:421rpx;
  background:rgba(255,255,255,1);
  border-radius:8rpx;
  box-sizing: border-box;
  font-size:32rpx;
  color:rgba(40,40,40,1);
  text-align: center;
  padding: 40rpx 0;
}
.exhibitionNodataMian .nodataImg{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}
.exhibitionNodataMian .nodataImg image{
  width: 228rpx;
  height: 216rpx;
  box-sizing: border-box;
}
.exhibitionNodataMian .nodataTxt{
  margin: 26rpx 0 21rpx;
  color:rgba(215,213,216,1);
  font-size:22rpx;
}
.exhibitionNodataMian .nodataYd{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  font-size:22rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(53,114,195,1);
}
.exhibitionNodataMian .nodataYd image{
  width: 16rpx;
  height: 25rpx;
  margin-left: 14rpx;
}
.exhBox{
  width: 100%;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.exhBox .exhBoxNav{
  width: 100%;
  height:80rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 1rpx 10rpx 0rpx rgba(44,44,44,0.1);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  padding: 0 13rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}
.exhBox .exhBoxNav .itemNav{
  margin: 0 25rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box
}
.exhBox .exhBoxNav .itemNavActive{
  color:rgba(255,113,0,1);
  font-size:24rpx;
  border-bottom: 2rpx solid rgba(255,113,0,1);
}
.exhBoxMian{
  width: 100%;
  box-sizing: border-box;
  padding: 49rpx 24rpx 0; 
  margin-top: 80rpx;
}
.exhBoxMian .exhBoxItem{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  box-shadow:0px 4rpx 8rpx 0px rgba(154, 154, 154, 0.35);
  border-radius:8rpx;
  display: flex;
  color: #666;
  margin-bottom: 21rpx;
}
.exhBoxMian .exhBoxItem .exhBoxItemL{
  width:14rpx;
  /* height:100%; */
  background:rgba(235,97,0,1);
  border-radius:8rpx 0 0 8rpx;
  margin-right: 13rpx;
}
.exhBoxMian .exhBoxItem .exhBoxItemLYdcg{
  background:rgba(25,172,23,1);
}
.exhBoxMian .exhBoxItem .exhBoxItemLYddx{
  background:rgba(99,124,21,1);
}
.exhBoxMian .exhBoxItem .exhBoxItemLZwsd{
  background:rgba(169,140,22,1);
}
.exhBoxMian .exhBoxItem .exhBoxItemLTkz{
  background:rgba(213,90,90,1);
}
.exhBoxMian .exhBoxItem .exhBoxItemLYtk{
  background:rgba(164,0,0,1);
}
.exhBoxMian .exhBoxItem .exhBoxItemLcancer{
  background:rgba(125,125,125,1);
}
.exhBoxMian .exhBoxItem .exhBoxItemR{
  width: 100%;
  box-sizing: border-box;
  padding: 23rpx 26rpx 16rpx 0;
}
.exhBoxItemR .exhBoxItemRT{
  width: 100%;
  box-sizing: border-box;

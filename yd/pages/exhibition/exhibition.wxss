  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx dashed rgba(220,220,220,1);
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTcolor{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(13,13,13,1);
  padding: 14rpx 0 20rpx;
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTYs{
  width:62rpx;
  height:28rpx;
  background:linear-gradient(0deg,rgba(245,155,75,1) 0%,rgba(253,190,100,1) 100%);
  border-radius:14rpx;
  font-size:21rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height: 28rpx;
  text-align: center;
  margin-left: 6rpx;
  padding: 0 10rpx;
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTL{
  width:130rpx;
  height:60rpx;
  line-height: 60rpx;
  text-align: center;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(235,97,0,1);
  border-radius:30rpx;
  color:rgba(235,97,0,1);
  font-size:26rpx;
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTLYdcg{
  border:1rpx solid rgba(34,172,56,1);
  color:rgba(10,157,8,1);
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTLYddx{
  border:1rpx solid rgba(99,124,21,1);
  color:rgba(99,124,21,1);
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTLZwsd{
  border:1rpx solid rgba(169,140,22,1);
  color:rgba(169,140,22,1);
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTLTkz{
  border:1rpx solid rgba(213,90,90,1);
  color:rgba(213,90,90,1);
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTLYtk{
  border:1rpx solid rgba(179,0,0,1);
  color:rgba(179,0,0,1);
}
.exhBoxItemR .exhBoxItemRT .exhBoxItemRTLcancer{
  border:1rpx solid rgba(125,125,125,1);
  color:rgba(125,125,125,1);
}
.exhBoxItemR .exhBoxItemRB{
  padding: 25rpx 0 0 0;
  width: 100%;
  box-sizing: border-box;
}
.exhBoxItemR .exhBoxItemRB .exhBoxItemRBs{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}
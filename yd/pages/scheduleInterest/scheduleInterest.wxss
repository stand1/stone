/* pages/scheduleInterest/scheduleInterest.wxss */
.scheduleInterestBox{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: fixed;
  overflow: auto;
  background:rgba(249,249,248,1);
}
.scheduleInterest{
  width: 100%;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.nav{
  width: 100%;
  height:90rpx;
  background:rgba(255,255,255,1);
  border-bottom: 1rpx solid rgba(229,229,229,1);
  box-sizing: border-box;
  display: flex;
  font-size:32rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}
.navItem{
  box-sizing: border-box;
  flex-grow: 3;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.navItemActive{
  font-weight:bold;
  color:rgba(82,92,122,1);
  border-bottom: 1rpx solid rgba(82,92,122,1);
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
}
.mian{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  margin-top: 102rpx;
  padding: 0 24rpx;
}
.mianItem{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0 37rpx;
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.mianItem:last-child{
  border-bottom: none;
}
.mianItemL text{
  display: block;
}
.mianItemL text.mianItemLColor{
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 10rpx;
}
.mianItemR{
  font-size:28rpx;
  font-weight:800;
  color:rgba(51,51,51,1);
}
.mianItemR .mianItemRA{
  color:rgba(86,162,255,1);
}
.mianItemR .mianItemRB{
  color:rgba(240,117,27,1);
}
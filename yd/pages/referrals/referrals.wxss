/* pages/referrals/referrals.wxss */
.referralsBox{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: fixed;
  overflow: auto;
  background:rgba(249,249,248,1);
}
.referrals{
  width: 100%;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.header{
  width: 100%;
  height: 340rpx;
  box-sizing: border-box;
  background: url('https://yd.mycze.com/img/invitation/companionBg.png') no-repeat;
  background-size: 100% 100%;
  font-size:40rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
  padding: 194rpx 0 0 95rpx;
}
.header text{
  display: block;
  width: 130rpx;
  height: 60rpx;
  text-align: right;
}
.center{
  margin-top: 39rpx;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 0 24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:rgba(153,153,153,1);
}
.center .item{
  width: 100%;
  height:133rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.center .item:last-child{
  border-bottom: none;
}
.itemL{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  font-size:28rpx;
  color:rgba(44,44,44,1);
}
.itemL image{
  width:60rpx;
  height:60rpx;
  background:rgba(149,149,149,1);
  border-radius:50%;
  margin-right: 14rpx;
}
/* pages/looseChange/looseChange.wxss */
.looseChangeBox{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background:rgba(249,249,248,1);
  position: fixed;
  overflow: auto;
}
.looseChange{
  width: 100%;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.looseChangeA{
  width: 100%;
  box-sizing: border-box;
}
.title{
  padding: 18rpx 24rpx;
}
.inp{
  width: 100%;
  height:88rpx;
  background:rgba(255,255,255,1);
  box-sizing: border-box;
}
.inp input{
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
  border: none;
  text-align: center;
  color: #333;
}
.btn{
  width:702rpx;
  height:64rpx;
  background:rgba(255,95,0,1);
  border-radius:32rpx 32rpx 32rpx 0px;
  margin: 22rpx auto 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:30rpx;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.looseChangeB{
  width: 100%;
  box-sizing: border-box;
}
.itemBox{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding-left: 30rpx;
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.item{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(229,229,229,1);
}
.item:last-child{
  border-bottom: none;
}
.item .name{
  font-weight:bold;
  margin-right: 46rpx;
}
.item input{
  width: 500rpx;
  height: 90rpx;
  border: none;
  box-sizing: border-box;
  color: #333;
}